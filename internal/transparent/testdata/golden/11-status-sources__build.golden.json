      "origin": "special",
      "type": "string",
      "value": "<PATH>"
    },
    {
      "name": "APP_NAME",
      "origin": "taskfile:vars",
      "type": "string",
      "value": "my-app"
    },
    {
      "name": "BUILD_DIR",
      "origin": "taskfile:vars",
      "type": "string",
      "value": "./build"
    },
    {
      "name": "CLI_ARGS",
      "origin": "taskfile:vars",
      "type": "string",
      "value": ""
    },
    {
      "name": "CLI_ARGS_LIST",
      "origin": "taskfile:vars",
      "type": "[]string",
      "value": [],
      "value_id": 0
    },
    {
      "name": "CLI_ASSUME_YES",
      "origin": "taskfile:vars",
      "type": "bool",
      "value": false
    },
    {
