      "origin": "taskfile:vars",
      "type": "string",
      "value": "1.0.0"
    }
  ],
  "tasks": [
    {
      "name": "build",
      "variables": [
        {
          "name": "MATCH",
          "origin": "call:vars",
          "type": "[]string",
          "value": [],
          "value_id": 0
        }
      ],
      "templates": [
        {
          "input": "{{.BUILD_DIR}}/{{.APP_NAME}}-{{.VERSION}}",
          "output": "./build/my-app-1.0.0",
          "context": "fields",
          "vars_used": [
            "BUILD_DIR",
            "APP_NAME",
            "VERSION"
          ]
        },
        {
          "input": "{{.BUILD_DIR}}",
          "output": "./build",
          "context": "fields",
          "vars_used": [
            "BUILD_DIR"
          ]
        },
        {
          "input": "echo 'Building {{.APP_NAME}} v{{.VERSION}}'",
          "output": "echo 'Building my-app v1.0.0'",
          "context": "cmds[0]",
          "vars_used": [
            "APP_NAME",
            "VERSION"
          ]
        },
        {
          "input": "test -f \"{{.APP_NAME}}-{{.VERSION}}\"",
          "output": "test -f \"my-app-1.0.0\"",
          "context": "status",
          "vars_used": [
            "APP_NAME",
            "VERSION"
          ]
        }
      ],
      "commands": [
        {
          "index": 0,
          "raw": "echo 'Building {{.APP_NAME}} v{{.VERSION}}'",
          "resolved": "echo 'Building my-app v1.0.0'"
        }
      ]
    }
  ]
